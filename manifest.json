{
  "name": "e-typing plus",
  "version": "1.5.3",
  "description": "e-typing のリザルト画面を拡張します。",
  "manifest_version": 2,
  "author": "やだ",
  "background": {
    "scripts": ["src/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.e-typing.ne.jp/*"
      ],
      "js": [
        "src/main.js"
      ]
    }
  ],
  "browser_action" : {
    "default_popup" : "popup.html"
  },
  "web_accessible_resources": [
    "src/jquery.balloon.min.js",
    "src/app/*",
    "fontawesome/*"
  ],
  "icons": {
    "128": "e128.png"
  }
}
